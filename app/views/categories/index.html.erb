<div class="container">
  <h1>Categories</h1>
  <div id="about" class="container-fluid">
    <div class="row">
      <div class="col-sm-8">
        <table>
          <tbody>
            <% @categories.each do |cat| %>
              <tr>
                <% unless cat.tours.blank? %>
                  <td>
                    <p><strong><%= link_to cat.name, cat %></strong></p>
                    <p>
                      <em>&emsp;Tours Of this category:</em>
                      <%  cat.tours.each do |tour| %>
                        <%= link_to tour.name, tour %> |
                      <% end %>
                    </p>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>