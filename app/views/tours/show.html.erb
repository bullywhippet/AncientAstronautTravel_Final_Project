<h1>Tours: <%= @tour.name %></h1>

<p>
  <%= image_tag @tour.image, alt: 'Tour Image' %>
</p>
<p>
  <strong>Price:</strong>
  <%= @tour.price %>
  <% if @tour.new %>
    <strong>New!</strong>
  <% end %>
  <% if @tour.on_sale %>
    <strong>On Sale!</strong>
  <% end %>
</p>
<p>
  <strong>Description:</strong>
  <%= raw(@tour.description) %>
</p>
<p>
  <strong>Category:</strong>
  <%= link_to @tour.category.name, @tour.category %>
</p>
